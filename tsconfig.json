{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "commonjs",
    "outDir": "./dist",
    "paths": {
      "@app/config": [
        "libs/config/src"
      ],
      "@app/entity": [
        "libs/entity/src"
      ],
      "@app/post": [
        "libs/post/src"
      ],
      "@app/test-util": [
        "libs/test-util/src"
      ],
      "@app/user": [
        "libs/user/src"
      ],
      "@app/util": [
        "libs/util/src"
      ]
    },
    "removeComments": true,
    "sourceMap": true,
    "target": "es2017"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}